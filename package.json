{
  "name": "JohnBlog",
  "version": "1.0.0",
  "description": "Johnny's Blog",
  "main": "bin/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "npm run clean && nodemon --exec better-npm-run start-dev",
    "build:uat": "npm run clean && better-npm-run build-client-uat && better-npm-run build-server-uat",
    "start:uat": "better-npm-run start-uat",
    "test": "better-npm-run test",
    "test:watch": "better-npm-run test-watch",
    "coverage": "better-npm-run coverage"
  },
  "betterScripts": {
    "start-dev": {
      "command": "babel-node ./bin/devServer.js",
      "env": {
        "HOST": "http://localhost",
        "PORT": 4050,
        "NODE_ENV": "development"
      }
    },
    "build-client-uat": {
      "command": "webpack --colors --display-error-details --config webpack/client.config.js",
      "env": {
        "NODE_ENV": "uat",
        "HOST": "http://120.92.133.3",
        "PORT": 80
      }
    },
    "build-server-uat": {
      "command": "webpack --colors --display-error-details --config webpack/server.config.js"
    },
    "start-uat": {
      "command": "node ./dist/server/server.js",
      "env": {
        "PORT": 4050,
        "NODE_ENV": "uat"
      }
    },
    "test": {
      "command": "mocha \"specs/**/*@(.js|.jsx)\" --require specs/test_helper.js --compilers js:babel-core/register",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test-watch": {
      "command": "mocha \"specs/**/*@(.js|.jsx)\" --require specs/test_helper.js --compilers js:babel-core/register --watch",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "coverage": {
      "command": "istanbul cover --root ./src --report text --report html node_modules/mocha/bin/_mocha -- \"specs/**/*@(.js|.jsx)\"  --require specs/test_helper.js --compilers js:babel-core/register",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "keywords": [
    "ExpressJS",
    "ReactJS",
    "Redux",
    "React hot loader",
    "React Router",
    "SCSS",
    "Webpack Devevelopment configuration",
    "Webpack Production configuration",
    "Airbnb Eslint",
    "pm2",
    "mocha",
    "chai"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:wssjq198913/JohnBlog.git"
  },
  "author": "Johnny",
  "license": "MIT",
  "engines": {
    "node": "5.6.0"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "css-modules-require-hook": "^4.2.2",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "install": "^0.10.1",
    "lodash": "^4.17.4",
    "morgan": "^1.9.0",
    "npm": "^5.5.1",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^3.2.0",
    "react-router-redux": "^4.0.8",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.15.6",
    "scroll-behavior": "^0.9.3",
    "serve-favicon": "^2.4.5"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "better-npm-run": "^0.1.0",
    "chai": "^4.1.2",
    "chai-immutable": "^1.6.0",
    "copy-webpack-plugin": "^4.1.1",
    "css-hot-loader": "^1.3.2",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "eslint": "^4.8.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.30.1",
    "immutable": "^3.8.2",
